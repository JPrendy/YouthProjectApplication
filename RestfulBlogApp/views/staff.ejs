<% include ./partials/header %>
<div  class="col-sm-12">
<h1 class="staffHeader">Staff</h1>
</div>
<%  result.forEach(function(result){  %>
<div class="col-sm-6">
<div class="cardBody"> 
<div class="card">
        <img class="card-img-top" src="/images/<%= result.staffImage %>" alt="Card image" style="width:100%">
        <div class="card-body">
          <h4 class="card-title"><%= result.staffname %></h4>
          <p class="card-text"><%= result.stafftitle %></p>
</div>
</div>
</div>
</div>
<% }) %>
<div  class="col-sm-12">
<h1 class="volunteerHeader">Volunteers</h1>
</div>
<!-- ////////////////////////////
Bootstrap Carousel 
